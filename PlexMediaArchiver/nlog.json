{
  "NLog": {
    "throwConfigExceptions": true,
    "targets": {
      "async": true,
      "logfile": {
        "type": "File",
        "fileName": "${basedir}/logs/nlog-${shortdate}.log",
        "layout": "${longdate}|${uppercase:${level}} - ${message} ${exception:format=tostring}"
      },
      "console": {
        "type": "Console",
        "layout": "${longdate}|${uppercase:${level}} - ${message} ${exception:format=tostring}"
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Trace",
        "writeTo": "logfile,console"
      }
    ]
  }
}